{
    "compileOnSave": true,    
    "compilerOptions": {
        "moduleResolution": "Node",        
        "module": "ESNext",        
        "rootDir": "src",
        "baseUrl": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true
        
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
    
}